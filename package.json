    "Adapter",
    "Fitbit",
    "Health",
    "Fitness",
    "Sleep",
    "Nap",
    "SmartSleep",
    "EarlySleep"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pocky2507/ioBroker.fitbit-fitness.git"
  },
  "bugs": {
    "url": "https://github.com/Pocky2507/ioBroker.fitbit-fitness/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.0.3",
    "axios": "^1.5.0",
